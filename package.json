{
  "name": "personal-portfolio-platform",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --dotenv .env.development",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,html,css,scss,json,md,mjs,cjs}\"",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.8.0",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/icon": "^2.0.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "eslint": "^9.33.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.17.1",
    "nuxt": "^4.0.3",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@iconify-json/material-symbols": "^1.2.33",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.50",
    "@nuxt/test-utils": "^3.19.2",
    "@pinia/testing": "^1.0.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/vue": "^8.1.0",
    "@types/lodash": "^4.17.20",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^18.0.1",
    "mongodb-memory-server": "^10.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "auto-changelog": {
    "template": "custom-template.hbs",
    "commitLimit": false,
    "replaceText": {
      "(^feat(?:\\([^)]*\\))?:)": "",
      "(^fix(?:\\([^)]*\\))?:)": "",
      "(^chore(?:\\([^)]*\\))?:)": "",
      "(^docs(?:\\([^)]*\\))?:)": "",
      "(^refactor(?:\\([^)]*\\))?:)": "",
      "(^test(?:\\([^)]*\\))?:)": "",
      "(^style(?:\\([^)]*\\))?:)": "",
      "(^perf(?:\\([^)]*\\))?:)": ""
    }
  },
  "version": "0.2.0"
}
